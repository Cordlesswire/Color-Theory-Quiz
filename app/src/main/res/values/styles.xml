<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPurple</item>
    </style>

    <!-- Splash Theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:drawable">@layout/activity_splash</item>
    </style>

    <!-- Splash Image -->
    <style name="splashImg" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/splashImg_margin</item>
    </style>

    <!-- Starting Image -->
    <style name="startingImage" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/startImg_height</item>
    </style>

    <!-- Your Name EditText -->
    <style name="yourName_edit" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_below">@id/quiz_image</item>
        <item name="android:padding">@dimen/yourName_padding</item>
    </style>

    <!-- Buttons Layout -->
    <style name="buttons_LinearLayout" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/buttons_padding</item>
    </style>

    <!-- Buttons Style -->
    <style name="AppTheme.ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorLime</item>
        <item name="colorButtonNormal">@color/colorYellow</item>
        <item name="android:layout_width">@dimen/buttons_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Button Next Style -->
    <style name="AppTheme.ButtonStyle.Next">
        <item name="backgroundTint">@color/colorTeal</item>
    </style>

    <!-- Button Back Style -->
    <style name="AppTheme.ButtonStyle.Back">
        <item name="backgroundTint">@color/colorLightBlue</item>
    </style>

    <!-- Button Submit Style -->
    <style name="AppTheme.ButtonStyle.Submit">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <!-- Button Restart Style -->
    <style name="AppTheme.ButtonStyle.Restart">
        <item name="backgroundTint">@color/colorDeepPurple</item>
    </style>

    <!-- Button Share Style -->
    <style name="AppTheme.ButtonStyle.Share">
        <item name="backgroundTint">@color/colorLightBlue</item>
        <item name="colorButtonNormal">@color/colorYellow</item>
    </style>

    <!-- Button Start Style -->
    <style name="StartButton" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorLightBlue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_margin">@dimen/buttonStart_margin</item>
    </style>


    <!-- Name Header TextView -->
    <style name="nameText_header" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/nameText_height</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textSize">@dimen/nameText_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="elevation">@dimen/nameText_elevation</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- CardView Style -->
    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_below">@id/name_text</item>
        <item name="cardCornerRadius">@dimen/cardCornerRadius</item>
        <item name="contentPadding">@dimen/contentPadding</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardElevation">@dimen/cardElevation</item>
        <item name="android:layout_margin">@dimen/cardView_layoutMargin</item>
    </style>

    <!-- Questions TextView -->
    <style name="questionsStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/questions_height</item>
        <item name="android:maxLines">3</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/questions_padding</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textSize">@dimen/questions_textSize</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="questionsStyle.q2">
        <item name="android:background">@color/colorCyan</item>
    </style>

    <style name="questionsStyle.q3">
        <item name="android:background">@color/colorAmber</item>
    </style>

    <style name="questionsStyle.q4">
        <item name="android:background">@color/colorIndigo</item>
    </style>

    <style name="questionsStyle.q5">
        <item name="android:background">@color/colorRed</item>
    </style>

    <style name="questionsStyle.q6">
        <item name="android:background">@color/colorLightBlue</item>
    </style>

    <style name="questionsStyle.q7">
        <item name="android:background">@color/colorLime</item>
    </style>

    <style name="questionsStyle.q8">
        <item name="android:background">@color/colorTeal</item>
    </style>

    <style name="questionsStyle.q9">
        <item name="android:background">@color/colorDeepOrange</item>
    </style>

    <!-- CheckBox Styles -->
    <style name="checkBox" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checked">false</item>
        <item name="android:paddingLeft">@dimen/checkBox_paddingLeft</item>
        <item name="android:layout_margin">@dimen/checkBox_margin</item>
    </style>

    <!-- RadioGroup Styles -->
    <style name="radioGroup" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/radioGroup_padding</item>
    </style>

    <!-- RadioButtons Styles -->
    <style name="radioButtons" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/radioButton_padding</item>
        <item name="android:layout_margin">@dimen/radioButton_margin</item>
        <item name="android:background">@color/colorLightGray</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- Image Question 4 -->
    <style name="imageQuestion4" parent="AppTheme">
        <item name="android:layout_width">@dimen/imageQuestion_size</item>
        <item name="android:layout_height">@dimen/imageQuestion_size</item>
        <item name="android:padding">@dimen/imageQuestion_padding</item>
    </style>

    <!-- EditText Style -->
    <style name="editText" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/editText_margin</item>
        <item name="android:layout_marginTop">@dimen/editText_margin</item>
        <item name="android:padding">@dimen/editText_padding</item>
    </style>

    <!-- LinearLayout Horizontal Question 6 Style -->
    <style name="linearLayout_horizontal" parent="AppTheme">
        <item name="android:baselineAligned">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/linearHor_padding</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- LinearLayout Vertical -->
    <style name="LinearLayout_vertical" parent="AppTheme">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">@dimen/linearVer_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Results' Text -->
    <style name="resultText" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">4</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorDeepPurple</item>
        <item name="android:padding">@dimen/results_padding</item>
        <item name="android:textSize">@dimen/results_textSize</item>
    </style>

    <!-- Trophy Image -->
    <style name="trophyImage" parent="AppTheme">
        <item name="android:layout_width">@dimen/trophyImg_size</item>
        <item name="android:layout_height">@dimen/trophyImg_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_margin">@dimen/trophyImg_margin</item>
    </style>

</resources>
